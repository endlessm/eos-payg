<node name="/com/endlessm/Payg1">
  <interface name="com.endlessm.Payg1">
    <method name="AddCode">
      <arg type="s" name="code" direction="in"/>
    </method>
    <method name="ClearCode"/>

    <signal name="Expired"/>

    <property name="CodeFormat" type="s" access="read"/>
    <property name="Enabled" type="b" access="read"/>
    <property name="ExpiryTime" type="t" access="read"/>
    <property name="RateLimitEndTime" type="t" access="read"/>
  </interface>

  <interface name="com.endlessm.Payg1.Provisioning">
    <method name="Provision">
      <arg type="s" name="provider" direction="in"/>
      <arg type="a{sv}" name="options" direction="in"/>
    </method>

    <property name="Provider" type="s" access="read"/>
  </interface>
</node>
